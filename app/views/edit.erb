<form action="/recipes/<%= params[:id] %>" method="post">

  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="name">Name:</label>

  <p><input type="text" value="<%= Recipe.find(params[:id]).name %>" name="name" id="name" /></p>

  <label for="ingredients">Ingredients:</label>

  <p><input type="text" value="<%= Recipe.find(params[:id]).ingredients %>" name="ingredients" id="ingredients" /></p>

  <label for="cook_time">Cook Time:</label>

  <p><input type="text" value="<%= Recipe.find(params[:id]).cook_time %>" name="cook_time" id="cook_time" /></p>

  <input type="submit" name="submit" value="submit"/>

</form>
